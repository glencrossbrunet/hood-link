<header id="header">
	<% if user_signed_in? %>
		<div class="session-link sign-out">
			<%= link_to t('logout'), destroy_user_session_path, method: :delete %>
		</div>
	<% else %>
		<div class="session-link sign-in">
			<%= link_to t('login'), new_user_session_path %>
		</div>
	<% end %>
	<div id="title"><%= t('title') %></div>
</header>